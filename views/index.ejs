<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[27vw] bg-white px-20 py-20 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a class="mt-2 inline-block font-semibold text-zinc-500" href="#"
        >Forgot password ?</a
      >
      <input
        class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-500 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing. You agree to Pinterest's terms of Service. Opens a new
        tab and acknowledge that you've read our privacy Policy Notice of
        collection
      </p>
      <a
        class="mt-2 inline-block font-semibold text-zinc-500 text-center w-full"
        href="/register"
        >Don't have an account ?</a
      >
    </form>
  </div>
</div>
<% include ./partials/footer.ejs %>
